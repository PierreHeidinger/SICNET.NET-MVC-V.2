@model entityModels.Cliente


@{
    ViewBag.Title = "Cliente_detalle";
    //Listado de departamentos
    var departamentos = (SelectList)ViewBag.departamentos;

    //Tipos de Documento
    var documentos = new List<SelectListItem>
    {
        new SelectListItem { Text="--SELECCIONE--" , Value = "0" },
        new SelectListItem { Text="DNI" , Value = "1" },
        new SelectListItem { Text="RUC" , Value = "2"}
    };

}




<!-- Encabezado inicio-->

<div class="row">


    <div class="col-md-12">
        @Html.ActionLink("CLIENTES", "Clientes", new { } , new { @class = "btn btn-warning", @style = "width:160px" })
        @Html.ActionLink("EDITAR","Cliente_agregar", new { codigo = Model.codigo  }, new { @class="btn btn-primary" , @style="width:160px"})
    </div>


</div>

<!-- Encabezado fin-->


<div class="row">
    <div class="col-md-12">
        <div class="card">

            <div class="card-header">
                <div class="card-title">
                    <div class="title"> Datos del cliente</div>
                </div>
            </div>

